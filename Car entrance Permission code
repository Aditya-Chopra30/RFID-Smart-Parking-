#include <SPI.h>
#include <MFRC522.h>
#include <Servo.h>

constexpr uint8_t RST_PIN = D3;
constexpr uint8_t SS_PIN = D4;
constexpr uint8_t SERVO_PIN = D2;

MFRC522 rfid(SS_PIN, RST_PIN);
Servo myservo;
int users[4] = {};
int userIndex = 0;

bool userAuth(String newTag) {
  for (int i = 0; i < userIndex; i++) {
    if (newTag == users[i]) {
      return true;
    }
  }
  return false;
}

void setup() {
  Serial.begin(9600);
  SPI.begin();
  rfid.PCD_Init();
  myservo.attach(SERVO_PIN);
}

void loop() {
  bool gate = false;
  if (rfid.PICC_IsNewCardPresent() && rfid.PICC_ReadCardSerial()) {
    Serial.println("Card UID : ");
    String tag = "";
    for (int i = 0; i < rfid.uid.size; i++) {
      tag.concat(rfid.uid.uidByte[i]);
    }
    Serial.println(tag);
    users[userIndex] = tag;
    userIndex++;
  }
  if (userAuth(newTag)) {
    gate = true;
    Serial.println("Valid UID, Welcome");
  }
  if (gate) {
    myservo.write(180);
    delay(5000);
    myservo.write(0);
    delay(5000);
  }
}
